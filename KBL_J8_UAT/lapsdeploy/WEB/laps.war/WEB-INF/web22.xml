<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
     PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>lapsWeb</display-name>
	
	<context-param>
		<param-name>PROPERTIESFILENAME</param-name>
		<param-value>LAPSProperties.xml</param-value>
	</context-param>	
	
	<context-param>
		<param-name>XMLFACTORY</param-name>
		<param-value>com.sun.xml.parser.DocumentBuilderFactoryImpl</param-value>
	</context-param>
 			
	<context-param>
		<param-name>APPHOME</param-name>
		<param-value>app.home.dir</param-value> 
	</context-param>
		
	<context-param> 
		<param-name>LAPSHOME</param-name> 
		<param-value>lapshome</param-value> 
	</context-param> 
	
	<context-param> 
		<param-name>LAPSCONFIG</param-name> 
		<param-value>lapsconfig</param-value> 
	</context-param> 
	
	<servlet>
		<servlet-name>controller</servlet-name>
		<servlet-class>com.sai.laps.helper.ControllerServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>controller</servlet-name>
		<url-pattern>/action/*</url-pattern>
		
	</servlet-mapping>

	<servlet-mapping>
	<servlet-name>controller</servlet-name>
		<url-pattern>/controllerservlet</url-pattern>		
	</servlet-mapping>
	  
	<session-config>
		<session-timeout>45</session-timeout>
	</session-config>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
		
</web-app>

	
